{
  "name": "smtp-server-as-promised",
  "version": "3.3.0",
  "description": "Promisify smtp-server module",
  "main": "lib/smtp-server-as-promised.js",
  "typings": "lib/smtp-server-as-promised.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dex4er/js-smtp-server-as-promised"
  },
  "keywords": [
    "promise",
    "smtp",
    "smtp-server"
  ],
  "author": "Piotr Roszatycki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dex4er/js-smtp-server-as-promised/issues"
  },
  "homepage": "http://github.com/dex4er/js-smtp-server-as-promised",
  "engines": {
    "node": ">=5.0.0"
  },
  "dependencies": {
    "smtp-server": "^3.4.1"
  },
  "devDependencies": {
    "@types/node": "^9.4.5",
    "@types/nodemailer": "^4.3.3",
    "@types/smtp-server": "^3.3.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "null-writable": "^0.2.0",
    "onchange": "^3.3.0",
    "promise-readable": "^3.1.3",
    "promise-socket": "^3.0.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "tap": "^11.1.0",
    "tap-given": "^0.6.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.7.1"
  },
  "scripts": {
    "pretest": "standard --verbose | snazzy && tsc --noEmit --pretty && tslint -t stylish -p .",
    "test": "tap test/*.js",
    "test:coverage": "npm test -- --coverage",
    "test:onchange:lcovonly": "npm run -s test-coverage -- -R min --coverage-report lcovonly; onchange '**/*.js' -- npm run -s test-coverage -- -R min --coverage-report lcovonly",
    "update": "npm run update:upgrade && npm run update:reinstall",
    "update:upgrade": "ncu --upgrade --upgradeAll",
    "update:reinstall": "rm -f package-lock.json && rm -rf node_modules && npm cache clear --force && npm install"
  },
  "standard": {
    "globals": [
      "After",
      "And",
      "Feature",
      "Given",
      "Scenario",
      "Then",
      "When"
    ]
  },
  "nyc": {
    "exclude": []
  }
}
